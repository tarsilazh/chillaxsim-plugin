{
  "openapi": "3.0.1",
  "info": {
    "title": "ChillaxSIM ChatGPT Plugin API",
    "version": "1.0.0",
    "description": "Provides ChillaxSIM product listings and generates checkout links for ChatGPT plugin"
  },
  "servers": [
    {
      "url": "https://<你的-pipedream-domain>.m.pipedream.net",
      "description": "ChillaxSIM Pipedream API"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "列出所有 eSIM 产品",
        "responses": {
          "200": {
            "description": "返回 Product 数组",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "生成 eSIM 的结账链接",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CheckoutRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "返回结账链接",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CheckoutResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Shopify Product 全局 ID"
          },
          "title": {
            "type": "string",
            "description": "产品标题"
          },
          "coverage": {
            "type": "string",
            "nullable": true,
            "description": "覆盖区域"
          },
          "ekyc": {
            "type": "string",
            "nullable": true,
            "description": "eKYC 要求"
          },
          "dataunit": {
            "type": "string",
            "nullable": true,
            "description": "数据单位"
          },
          "activationinfo": {
            "type": "string",
            "nullable": true,
            "description": "激活信息"
          },
          "variants": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Variant"
            }
          }
        },
        "required": ["id","title","variants"]
      },
      "Variant": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Shopify Variant 全局 ID"
          },
          "title": {
            "type": "string",
            "description": "变体标题"
          },
          "price": {
            "type": "number",
            "format": "float",
            "description": "价格"
          },
          "currency": {
            "type": "string",
            "description": "货币代码"
          },
          "planname": {
            "type": "string",
            "nullable": true,
            "description": "计划名称"
          },
          "data": {
            "type": "string",
            "nullable": true,
            "description": "数据量"
          },
          "service_days": {
            "type": "string",
            "nullable": true,
            "description": "服务天数"
          },
          "package_type": {
            "type": "string",
            "nullable": true,
            "description": "套餐类型"
          },
          "telephony": {
            "type": "string",
            "nullable": true,
            "description": "是否支持语音"
          },
          "reducedspeed": {
            "type": "string",
            "nullable": true,
            "description": "降速后速率"
          }
        },
        "required": ["id","title","price","currency"]
      },
      "CheckoutRequest": {
        "type": "object",
        "properties": {
          "product_id": {
            "type": "string",
            "description": "要购买的变体 ID"
          },
          "quantity": {
            "type": "integer",
            "default": 1,
            "description": "购买数量"
          }
        },
        "required": ["product_id"]
      },
      "CheckoutResponse": {
        "type": "object",
        "properties": {
          "checkout_url": {
            "type": "string",
            "description": "跳转 Shopify 结账的链接"
          }
        },
        "required": ["checkout_url"]
      }
    }
  }
}

